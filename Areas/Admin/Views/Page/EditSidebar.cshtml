@model Shop.Models.ViewModels.Pages.SidebarViewModel

@{
    ViewBag.Title = "Edit Sidebar";
}

<h2>Редактор Сайдбара</h2>
@if (TempData["OK_Message"] != null)
{
    <div class="alert alert-success">
        @TempData["OK_Message"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<!--Скрипт подмены для CKEditor-->
@section Scripts
{
    <script>
        CKEDITOR.replace("Body")
    </script>
}